<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/viewbackground"
    tools:context=".ZooActivity">


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/listView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/zoopicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/zooimage"/>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="104dp">

            <TextView
                android:id="@+id/zooname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:text="木柵動物園"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/zooMRTlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:text="動物園站1號出口"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/zootag"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textColor="#FFFFFFFF"
                android:text="#自然 #親子"
                android:textSize="12dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/zoostar"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/star5"
            android:scaleType="fitStart" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="wrap_content"
        android:layout_height="510dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="51dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />

</android.support.constraint.ConstraintLayout>