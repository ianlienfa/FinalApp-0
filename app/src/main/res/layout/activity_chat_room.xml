<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tripplogbackground"
    tools:context=".ChatRoom">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="320dp"
        android:layout_height="350dp"
        android:scrollbars="none"
        android:background="@drawable/boardshape"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/triplogchat"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#149AAD" />
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/record"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00000000"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/microphone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/send"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"/>

    <ImageButton
        android:id="@+id/send"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00000000"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/send"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#149AAD"
        android:textCursorDrawable="@drawable/edittextcolor"
        android:theme="@style/MyEditText"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"/>

    <ImageView
        android:id="@+id/triplogchat"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:scaleType="fitStart"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/triplogchat" />

</android.support.constraint.ConstraintLayout>