<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom12"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/arstamp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_question"
        app:srcCompat="@drawable/ellipse18" />

    <ImageView
        android:id="@+id/stamp1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ellipse17"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/camera"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/stamp2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ellipse18"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stamp1"/>

    <ImageView
        android:id="@+id/stamp3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ellipse18"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stamp2"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stampcollect"
        app:srcCompat="@drawable/mypleasant" />

    <ImageButton
        android:id="@+id/camera"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_marginEnd="5dp"
        app:srcCompat="@drawable/camera"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toStartOf="@+id/arstamp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/plus1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/plus"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/arstamp"
        app:layout_constraintStart_toEndOf="@+id/stamp1"/>

    <ImageButton
        android:id="@+id/plus2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/plus"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/stamp2"
        app:layout_constraintTop_toBottomOf="@+id/stamp1"/>

    <ImageButton
        android:id="@+id/plus3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/plus"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toEndOf="@+id/stamp3"
        app:layout_constraintTop_toBottomOf="@+id/stampname1"/>

    <ImageButton
        android:id="@+id/stampcollect"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/script" />

    <ImageButton
        android:id="@+id/button_question"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/question" />

    <TextView
        android:id="@+id/missionlong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="長置任務"
        android:textColor="#FFFFFFFF"
        android:textSize="12dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/arstamp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/stampname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="台北車站"
        android:textColor="#FFFFFFFF"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/plus1"
        app:layout_constraintStart_toEndOf="@+id/stamp1"/>

    <TextView
        android:id="@+id/stampname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北投站"
        android:textColor="#FFFFFFFF"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/stamp2"
        app:layout_constraintTop_toBottomOf="@+id/plus2"/>

    <TextView
        android:id="@+id/stampname3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="淡水站"
        android:textColor="#8616A9AF"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/stamp3"
        app:layout_constraintTop_toBottomOf="@+id/plus3"/>
<!--start from here-->
    <ImageView
        android:id="@+id/first_nfc_alert_vis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/first_nfc_alert"
        android:visibility="invisible"
    />

    <TextView
        android:id="@+id/place_name1_vis"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="125dp"
        android:text="台北車站"
        android:textColor="#0E5568"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:visibility="invisible"
    />

    <ScrollView
        android:id="@+id/scrollView_for_nfc1_vis"
        android:layout_width="260dp"
        android:layout_height="218dp"
        android:layout_marginTop="195dp"
        app:layout_constraintStart_toStartOf="@id/place_name1_vis"
        app:layout_constraintTop_toTopOf="@+id/first_nfc_alert_vis"
        android:visibility="invisible"
        >


