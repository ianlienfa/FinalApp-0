<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:background="@drawable/dcardbackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/maintitle"
        android:layout_width="224dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/maintriplog" />

    <LinearLayout
        android:id="@+id/layout_default"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="right"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:background="@null"
            android:gravity="right|center"
            android:hint="搜尋貼文"
            android:singleLine="true"
            android:textColor="#82CCE1"
            android:textCursorDrawable="@drawable/edittextkeycolor"
            android:textSize="10dp" />

        <ImageButton
            android:id="@+id/iv_default"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/search" />

    </LinearLayout>


    <TextView
        android:id="@+id/hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F7FBFD"
        android:textSize="18dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="20dp"
        android:text="熱門貼文" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_Taipei101"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/pic1" />

            <ImageButton
                android:id="@+id/button_Water"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/pic2" />

            <ImageButton
                android:id="@+id/button_Zoo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/panda" />

            <ImageButton
                android:id="@+id/button_Egg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/pic3" />

            <ImageButton
                android:id="@+id/button_GongGuan"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/pic4" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F7FBFD"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="推薦領航員" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_person1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#00000000"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/person1" />

            <ImageButton
                android:id="@+id/button_person2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/person2" />

            <ImageButton
                android:id="@+id/button_person3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/person3" />

            <ImageButton
                android:id="@+id/button_person4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/person4" />

            <ImageButton
                android:id="@+id/button_person5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/person5" />

            <ImageButton
                android:id="@+id/button_person6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/person6" />

            <ImageButton
                android:id="@+id/button_person7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/person7" />

            <ImageButton
                android:id="@+id/button_person8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/person8" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/layout_chat"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/runtextshape"
            android:orientation="horizontal">

            <com.example.finalapp.AutoScrollTextView
                android:id="@+id/runtext"
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:text="    聊天室搜尋中"
                android:textColor="#82CCE1"
                android:textSize="16dp" />

            <requestFocus />
        </LinearLayout>

        <ImageButton
            android:id="@+id/chat_bt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bubble" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/button_pen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00000000"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/pen" />
</LinearLayout>